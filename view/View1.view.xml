<mvc:View
  controllerName="curriculo.project1.controller.View1"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
  <Page id="_IDGenPage1"  showHeader="true">
    <!-- Cabeçalho com Logo e Título -->
    <customHeader>
      <Bar id="_IDGenBar" design="Header" >
        <contentLeft>
          <Image id="_IDGenImage" src="https://www.sap.com/dam/application/shared/logos/sap-logo-svg.svg" width="100px"/>
        </contentLeft>
        <contentMiddle>
          <Title id="_IDGenTitle" text="{i18n>titulo_en}" level="H1"/>
        </contentMiddle>
        <contentRight>
          <Label id="_IDGenLabel" design="Bold" text="{i18n>idioma_en}" showColon="true"/>
          <Switch id="_IDGenSwitch" state="true" change="onChangeLanguage" customTextOn="EN" customTextOff="PT" type="Default"/>
        </contentRight>
      </Bar>
    </customHeader>
    <content>
      <!-- Tabs -->
      <IconTabBar id="idIconTabBar" 
                expandable="true" 
                headerMode="Inline" 
                upperCase="true" 
                stretchContentHeight="true">
        <!-- Tab: Resumo -->
        <items>
          <IconTabFilter id="_IDGenIconTabFilter" text="{i18n>resumo_en}" key="resumo" icon="sap-icon://document" iconColor="Contrast">
            <smartForm:SmartForm id="smartForm"
			                     app:defaultCheckBoxDisplayBehaviour="OnOff"
			                     app:defaultDropDownDisplayBehaviour="idAndDescription"
			                     editTogglable="false"
                           editToggled="handleEditToggled"
			                     validationMode="Async" expanded="true">
              <smartForm:Group id="_IDGenGroup" title="">
                <smartForm:GroupElement id="_IDGenGroupElement" label="Perfil">
                  <Text id="_IDGenText2" text=""></Text>
                </smartForm:GroupElement>
                <smartForm:GroupElement id="_IDGenGroupElement1" label="Experiência SAP – Sumário">
                  <Text id="_IDGenText3" text=""></Text>
                </smartForm:GroupElement>
                <smartForm:GroupElement id="_IDGenGroupElement2" label="Informações Gerais">
                  <Text id="_IDGenText5" text=""></Text>
                </smartForm:GroupElement>
                <smartForm:GroupElement id="_IDGenGroupElement3">
                  <!-- Write Codes -->
                </smartForm:GroupElement>
                <smartForm:GroupElement id="_IDGenGroupElement4">
                  <!-- Write Codes -->
                </smartForm:GroupElement>
              </smartForm:Group>
            </smartForm:SmartForm>
          </IconTabFilter>
          <IconTabSeparator id="_IDGenIconTabSeparator1"/>
          <!-- Tab: Experiências -->
          <IconTabFilter id="_IDGenIconTabFilter1" text="{i18n>experiencia_en}" key="experiencias" icon="sap-icon://employee-approvals" iconColor="Contrast" count="">
            <HBox id="_IDGenVBox1" justifyContent="SpaceAround">
              <VBox id="_IDGenVBox4" >
                <Label id="_IDGenLabel1" text=""></Label>
                <Text id="_IDGenText1" text=""></Text>
              </VBox>
              <VBox id="_IDGenVBox5" >
                <Label id="_IDGenLabel2" text=""></Label>
                <Text id="_IDGenText4" text=""></Text>
              </VBox>
            </HBox>
          </IconTabFilter>
          <IconTabSeparator id="_IDGenIconTabSeparator2"/>
          <!-- Tab: Formação e Certificados -->
          <IconTabFilter id="_IDGenIconTabFilter2" text="{i18n>formacao_en}" key="formacao" icon="sap-icon://course-program" iconColor="Contrast">
            <VBox id="_IDGenVBox2">
              <Text id="_IDGenText8" text=""></Text>
              <HBox id="_IDGenHBox" >
                <Image id="_IDGenImage2" src="css\image.png" width="80%"></Image>
                <Image id="_IDGenImage3" src="css\1679324794437.jpeg" width="80%"></Image>
                <Image id="_IDGenImage4" src="css\1736803373978.jpeg" width="80%"></Image>
              </HBox>
            </VBox>
          </IconTabFilter>
          <IconTabSeparator id="_IDGenIconTabSeparator3"/>
          <!-- Tab: Contatos -->
          <IconTabFilter id="_IDGenIconTabFilter3" text="{i18n>contatos_en}" key="contatos" icon="sap-icon://contacts" iconColor="Contrast">
            <VBox id="_IDGenVBox3" alignItems="Start">
              <HBox id="_IDGenHBox1" >
                <Label id="_IDGenLabel4" text="Email:" design="Bold" ></Label>
                <Text id="_IDGenText6" text="cadusqueiroz@yahoo.com"></Text>
              </HBox>
              <HBox id="_IDGenHBox2" >
                <Label id="_IDGenLabel5" text="WhatsApp:" design="Bold"></Label>
                <Text id="_IDGenText7" text="55+ (41) 99824-3032"></Text>
              </HBox>
              <HBox id="_IDGenHBox3" >
                <Label id="_IDGenLabel6" text="Linkedin:  " design="Bold"></Label>
                <Link id="_IDGenLink" href="https://www.linkedin.com/in/carlos-queiroz-17836325b/" target="_blank" text="   " icon="sap-icon://chain-link"></Link>
              </HBox>
            </VBox>
          </IconTabFilter>
        </items>
      </IconTabBar>
    </content>
    <footer>
      <Bar id="_IDGenBar2">
        <contentLeft>
          <Text id="_IDGenText"/>
        </contentLeft>
      </Bar>
    </footer>
  </Page>
</mvc:View>